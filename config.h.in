 /**
 * \file     config.h.in
 * \brief    definition of the building options
 */


#ifndef __CONFIG_PLAYUVER_H__
#define __CONFIG_PLAYUVER_H__

/* Version definition */
#define PLAYUVER_VERSION_MAJOR @PLAYUVER_VERSION_MAJOR@
#define PLAYUVER_VERSION_MINOR @PLAYUVER_VERSION_MINOR@
#define PLAYUVER_VERSION_PATCH @PLAYUVER_VERSION_PATCH@
#define PLAYUVER_VERSION @PLAYUVER_VERSION@
#define PLAYUVER_VERSION_STRING "@PLAYUVER_VERSION@"

#define DEPENDENCIES_STRING "@DEPENDENCIES_STRING@"

/* CPU features */
#cmakedefine USE_SSE

/* QT definition */
#cmakedefine USE_QT4

#undef QT_VERSION_PLAYUVER
#ifndef USE_QT4
  #define QT_VERSION_PLAYUVER 5
#else
  #define QT_VERSION_PLAYUVER 4
#endif

/* QtDBus */
#cmakedefine USE_QTDBUS

#cmakedefine PLAYUVER_THREADED_MODULES

/* OpenCV */
#cmakedefine USE_OPENCV

/* FFMPEG */
#cmakedefine USE_FFMPEG

/* Fervor update lib */
#cmakedefine USE_FERVOR

/* PIXFC-SSE lib */
#cmakedefine USE_PIXFC


#endif // __CONFIG_PLAYUVER_H__
